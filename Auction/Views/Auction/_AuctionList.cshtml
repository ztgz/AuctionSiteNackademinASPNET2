
@foreach (var auction in Model)
{
    <a asp-controller="Auction" asp-action="GetAuction" asp-route-auctionId=@auction.AuktionId>@auction.Titel</a>
    <p>
        Status:
        @if (DateTime.Now < auction.StartDatum)
        {
            <span>Auktionen har ännu inte startat</span>
        }
        else if (DateTime.Now < auction.SlutDatum)
        {
            <span>Auktionen är öppen</span>
        }
        else
        {
            <span>Auktionen är slut</span>
        }
    </p>
    <p>Startdatum: @auction.StartDatum</p>
    <p>Slutdatum: @auction.SlutDatum</p>
    <p>Utropspris: @auction.Utropspris kr</p>
    <hr />
}
