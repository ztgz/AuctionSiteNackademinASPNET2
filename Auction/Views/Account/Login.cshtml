@model _UserLogin

@{
    ViewData["Title"] = "Logga in";
}

<div class="row justify-content-md-center">
    <div class="col-xs-12 col-sm-10 col-md-8 mt-2 mb-1">
        <h2 class="strong">Logga in</h2>
        <form asp-controller="Account" asp-action="Login">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input class="btn btn-dark float-right" type="submit" value="Logga in" />
        </form>
    </div>
</div>

<hr />
<div class="row justify-content-md-center">
    <div class="col-xs-12 col-sm-10 col-md-8 mb-2">
        <h2>Inget konto?</h2>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-2">
    </div>
    <div class="col-xs-12 col-sm-5 col-md-4">
        <a asp-controller="Account" asp-action="Register" class="btn btn-dark"><i class="fas fa-envelope-square"></i>&nbsp;Skapa konto med epost</a>
    </div>
    <div class="col-xs-12 col-sm-5 col-md-4">
        <a asp-controller="Account" asp-action="LoginFacebook" class="btn btn-primary"><i class="fab fa-facebook"></i>&nbsp;Logga in med FB</a>
    </div>
</div>
